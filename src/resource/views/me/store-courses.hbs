<script>
    /* 
    DOMContentLoaded => có tác dụng là khi DOM load content thì sẽ load đoạn script có chứ mã
    => DOMContentLoaded tiếp đoạn callback function trong này
    */
    document.addEventListener("DOMContentLoaded",function(){
        var courseId;

        /// lắng nghe sự kiện checkbox-all
        var checkboxAll = $('#checkbox-all');
        var courseItemsCheckbox=$('input[name="courseIds[]"]');
        var checkAllSubmitBtn = $('.check-all-submit');
        //var containerForm = document.forms["container-form"];// kiểu lấy của JavaScript
        var containerForm = $('form[name="container-form"]'); // kiểu lấy của JQuery

        ///
        /**
        document.forms là thuộc tính js có thể nhận biết và tự gọi được form
        */
        var deleteForm = document.forms["delete-form"]; 
        $('#delete-course-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
             courseId = button.data('id');
        });

        var btnDeleteCourseId = document.getElementById("btn-delete-course");
        btnDeleteCourseId.onclick = function(){
            deleteForm.action = '/courses/' + courseId + '?_method=DELETE';
            deleteForm.submit();
        }
        //when checkboxAll click
        checkboxAll.change(function(){
            var checkeAll = $(this).prop('checked');
            if(checkeAll){
                courseItemsCheckbox.prop('checked',true);
            }else{
                courseItemsCheckbox.prop('checked',false);
            }
            renderCheckAllSubmittedBtn();
        });
        // when courseItemsCheckbox is checked
        courseItemsCheckbox.change(function(){
            var checkedAll = courseItemsCheckbox.length === $('input[name="courseIds[]"]:checked').length;
            if (checkedAll) {
                checkboxAll.prop('checked', true);
            }else{
                checkboxAll.prop('checked', false);
            }
            renderCheckAllSubmittedBtn();
        });
        // function renderCheckAllSubmittedBtn
        function renderCheckAllSubmittedBtn() {
            var checkCount = $('input[name="courseIds[]"]:checked').length;
            if(checkCount > 0){
                checkAllSubmitBtn.removeAttr('disabled');
            }else{
                checkAllSubmitBtn.attr('disabled',true);
            }
        }
